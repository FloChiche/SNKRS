{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "Price": {
      "type": "decimal",
      "required": true
    },
    "Image": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false
    },
    "Brand": {
      "type": "enumeration",
      "enum": [
        "Jordan",
        "Nike",
        "Adidas",
        "Louis Vuitton",
        "Dior"
      ],
      "required": true
    }
  }
}
